<form class="form" action="{{ path('fos_user_registration_register') }}"  {{ form_enctype(form) }} method="post">
       	<div class="row form-group">
           	<div class="col-xs-12 col-sm-6 customSelect">
           		 {{ form_widget(form.country, {'attr': {'class': 'form-control', 'data-rule-required' : 'true', 'placeholder' : 'País'}  }) }}
           	</div>
           	<div class="col-xs-12 col-sm-6">
                 {{ form_widget(form.distributor, {'attr': {'class': 'form-control', 'data-rule-required' : 'true', 'placeholder' : 'Distribuidor'}  }) }}
           	</div>
       	</div>
		<div class="row form-group">
			<div class="col-xs-12 col-sm-6">
				 {{ form_widget(form.fullName, {'attr': {'class': 'form-control', 'data-rule-required' : 'true', 'placeholder' : 'Nombre'}  }) }}
			</div>
			<div class="col-xs-12 col-sm-6">
					
				{{ form_widget(form.username, {'attr': {'class': 'form-control', 'data-rule-required' : 'true', 'placeholder' : 'Mail'}  }) }}
			</div>     
		</div>
		<div class="row form-group">
           	<div class="col-xs-12 col-sm-6 customSelect">
           		 {{ form_widget(form.position, {'attr': {'class': 'form-control', 'data-rule-required' : 'true'}  }) }}
       		</div>
			<div class="col-xs-12 col-sm-6">
				
				{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'data-rule-required' : 'true', 'placeholder' : 'Crear contraseña'}  }) }}
			</div>
		{{ form_errors(form) }}     
		{{ form_row(form._token) }}
		</div>
		<div class="row">
			<div class="hidden-xs col-sm-6">
			</div>
			<div class="col-xs-12 col-sm-6">
				<a href="{{ path('odiseo_conagra_frontend_index') }}" class="btn btn-default cancelButton">Cancelar</a>
				<button type="submit" class="btn btn-danger submitButton" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}">Ingresar</button>
			</div>
		</div>
</form>