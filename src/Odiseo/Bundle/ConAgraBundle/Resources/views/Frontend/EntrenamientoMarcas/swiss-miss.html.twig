{% extends 'OdiseoConAgraBundle:Frontend:layout.html.twig' %}
 
{% block content %}
<div class="entrenamiento_marcas">
	<div class="mainTitleContent clearfix">
		<h1 class="mainTitle pull-left">Entrenamiento de marcas</h1>
		<a href="{{ path('odiseo_conagra_frontend_entrenamiento_marcas_index') }}" class="backButton pull-right">
			<img src="{{ asset('bundles/odiseoconagra/images/volverInicioButton.png') }}">
		</a>
	</div>
	<div class="infoBrand swissmiss">
		<div class="tabs">
			<ul>
				<li><a href="#" class="infoMarca active" data-tab="infoMarca"></a></li>
				<li><a href="#" class="catalogo" data-tab="catalogo"></a></li>
				<li><a href="#" class="manual" data-tab="manual"></a></li>
			</ul>
		</div>
		<div class="info">
			<img src="{{ asset('bundles/odiseoconagra/images/marcas/solo/swissmiss.png') }}" class="logo">
			<div class="mainInfo">
				<div class="tabContent infoMarca">
					<h3>Información de la marca</h3>
					<div class="infoContent">
						<p>
							{{ 'brands_info_swissmiss' | trans | raw }}	
						</p>
					</div>
				</div>
				<div class="tabContent catalogo hide">
					<h3>Catálogo</h3>
					<div class="infoContent">
						<img src="{{ asset('bundles/odiseoconagra/images/catalogos/swissmiss.png') }}" class="img-responsive">
					</div>
				</div>
				<div class="tabContent manual hide">
					<h3>Manual de marca</h3>
					<div class="infoContent">
						<div class="downloads clearfix">
							<div class="downloadItem">
								<a class="name" href="{{ asset('bundles/odiseoconagra/downloads/manual/swiss_miss_asset_guide.pdf') }}" target="_blank">Asset Guide</a>
								<p class="fileInfo">ZIP, 434KB</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="social hide">
			<ul>
				<li><a href="#"><img src="{{ asset('bundles/odiseoconagra/images/wp-icon.png') }}"></a></li>
				<li><a href="#"><img src="{{ asset('bundles/odiseoconagra/images/twitter-icon.png') }}"></a></li>
				<li><a href="#"><img src="{{ asset('bundles/odiseoconagra/images/facebook-icon.png') }}"></a></li>
				<li><a href="#"><img src="{{ asset('bundles/odiseoconagra/images/instagram-icon.png') }}"></a></li>
			</ul>
		</div>
	</div>
</div>
{% endblock %}
